@{
  Layout = "_Layout";
  ViewData["Title"] = "Авторизация";
}

<div class="container" style="width: 30%;">
    <form class="mb-2" asp-action="Login">
        <div class="form-group">
            <input class="metro-input" type="text" name="login" placeholder="Логин..." />
        </div>
        <div class="form-group">
            <input class="metro-input" type="password" name="password" placeholder="Пароль..." />
        </div>
        <div class="form-group">
            <button type="submit" class="button success">Войти</button>
        </div>
    </form>
</div>
