<div class="grid">
    <div class="row flex-justify-between">
        <div class="cell-3">
            <ul class="sidebar-menu border" style="height: auto !important;">
                <li class="group-title">Меню</li>
                <li>
                    <a class="text-upper" asp-controller="Dashboard" asp-action="Index">
                        <svg class="bi" width="16" height="16">
                            <use xlink:href="#home"></use>
                        </svg>
                        Начало
                    </a>
                </li>
                <li>
                    <a class="text-upper" asp-controller="Dashboard" asp-action="Resources">
                        <svg class="bi" width="16" height="16">
                            <use xlink:href="#diagram"></use>
                        </svg>
                        Обзор ресурсов
                    </a>
                </li>
                <li>
                    <a class="text-upper" asp-controller="Dashboard" asp-action="Users">
                        <svg class="bi" width="16" height="16">
                            <use xlink:href="#people"></use>
                        </svg>
                        Пользователи
                    </a>
                </li>
                <li>
                    <a class="text-upper" asp-controller="Monitoring" asp-action="Index">
                        <svg class="bi" width="16" height="16">
                            <use xlink:href="#eye"></use>
                        </svg>
                        Мониторинг
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a class="text-upper" asp-controller="Account" asp-action="Logout">
                        <svg class="bi" width="16" height="16">
                            <use xlink:href="#logout"></use>
                        </svg>
                        Выйти из системы
                    </a>
                </li>
            </ul>
        </div>
        <div class="cell-9">
            <div class="container-fluid pl-10">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
